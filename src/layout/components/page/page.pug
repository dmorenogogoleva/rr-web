include ./../info/info.pug
include ./../text/text.pug

mixin page
  doctype html
  html(lang="ru")
    head
      title Mememe
      link(rel="stylesheet", href="./../styles/main.css")
      script(src="./../scripts/index.js" defer)
      meta(charset="utf-8")
      meta(name="viewport", content="width=device-width, initial-scale=1")

      meta(name="description" content="Повесть про людей, города, сны и громкие мысли")

    body
      main.page
        +info()
        +text()

